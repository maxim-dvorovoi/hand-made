        document.getElementById("nowRead").innerHTML = Math.floor(Math.random() * 4 +1);

        var timerId = setInterval(function() {
            document.getElementById("nowRead").innerHTML = Math.floor(Math.random() * 4 +1);
        }, 5000);
    </script>

    <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'></script>
    <script src='{{ asset('bundles/app/js/jquery.zoom.js') }}'></script>

    <script>
        $(document).ready(function(){
            $('#ex1').zoom();
        });
    </script>

    <script>
        if( !window.jQuery ) document.write('<script src="{{ asset('bundles/app/js/jquery-3.0.0.min.js') }}"><\/script>');
    </script>
    <script src="{{ asset('bundles/app/js/loginmain.js') }}"></script>
    <script src="{{ asset('bundles/app/js/jquery.cookie.js') }}"></script>
{% endblock %}