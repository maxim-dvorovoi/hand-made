{% extends '@App/layout.html.twig' %}

{% block categories %}
    {% for cat in categories %}
        <a href="{{ path('category_item', {id:cat.id}) }}" class="hover_nav">{{ cat.name }}</a>
    {% endfor %}
{% endblock %}

{% block categories_mobile %}
    {% for cat in categories %}
        <li><a href="{{ path('category_item', {id:cat.id}) }}" style="padding: 12px 20px 12px 60px; line-height: normal; height: auto;">- {{ cat.name }}</a></li>
    {% endfor %}
{% endblock %}

{% block body %}
    <div class="index">
        <h3>Войдите в учетную запись</h3>
        <br><br>
        <div class="registration">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post">
                <label for="username">Имя:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />

                <br>

                <label for="password">Пароль:&nbsp;</label>
                <input type="password" id="password" name="_password" />

                <br>

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

                <button type="submit">Войти</button>
            </form>
        </div>

        <br><br>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .registration {
            width: 363px;
            margin: 0 auto;
        }

        @media only screen and (max-width : 400px) {
            .registration {
                width: 100%;
                padding: 10px;
            }

            input[type=text]:not(.browser-default) {
                width: 100% !important;
            }

            input[type=password]:not(.browser-default) {
                width: 100% !important;
            }
        }

        @media only screen and (min-width : 993px) {


            footer {
                position: fixed;
                left: 0px;
                bottom: 0px;
                height: 282px;
                width: 100%;
            }

            /* IE 6 */
            * html footer {
                position: absolute;
                top: expression((0-(footer.offsetHeight)+(document.documentElement.clientHeight ? document.documentElement.clientHeight : document.body.clientHeight)+(ignoreMe = document.documentElement.scrollTop ? document.documentElement.scrollTop : document.body.scrollTop))+'px');
            }
        }
    </style>
{% endblock %}